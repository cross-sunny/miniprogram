.container {
    padding-top: 200rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.logo {
    text-align: center;
    margin-bottom: 80rpx;
}
.logo text {
    font-size: 60rpx;
    font-weight: bold;
    color: #FF6B35;
}
.input-box {
    background: white;
    border-radius: 80rpx;
    padding: 0 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
}
.input-box input {
    flex: 1;
    font-size: 30rpx;
    height: 100%;
}
.btn-primary {
    background: linear-gradient(90deg, #FF6B35, #FF9248);
    color: white;
    border-radius: 80rpx;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 40rpx;
}
.login-link {
    text-align: center;
    margin-top: 40rpx;
    font-size: 28rpx;
    color: #666;
}
.login-link text {
    color: #FF6B35;
    margin-left: 10rpx;
}