.card {
    width: 400rpx;
    height: 560rpx;
    background: linear-gradient(135deg, #FFE0B2, #FFCC80);
    margin: 0 auto;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10rpx 20rpx rgba(255,107,53,0.2);
    transition: transform 0.3s;
}
.card:active {
    transform: scale(0.98);
}