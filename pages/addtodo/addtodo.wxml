<view class="add-todo">
    <!-- 任务内容输入 -->
    <textarea
            placeholder="请输入任务内容"
            bindinput="onContentInput"
            class="content-input"
    ></textarea>

    <!-- 极简版截止时间选择器（确保可点击） -->
    <view class="deadline-simple">
        <!-- 直接用picker，不嵌套多余层级 -->
        <picker mode="datetime" bindchange="onDeadlineChange">
            <text class="picker-btn">{{deadline ? deadline : '点击选择截止时间'}}</text>
        </picker>
    </view>

    <!-- 提交按钮 -->
    <button class="submit-btn" bindtap="submitTodo">提交任务</button>
</view>