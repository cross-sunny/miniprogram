.add-todo {
    padding: 20rpx;
    background: #f5f5f5;
}
.content-input {
    width: 100%;
    min-height: 120rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 20rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}
/* 极简选择器样式：放大点击区域 */
.deadline-simple {
    margin-bottom: 30rpx;
}
.picker-btn {
    display: inline-block;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 16rpx;
    color: #666;
    font-size: 28rpx;
    /* 强制可点击 */
    pointer-events: auto;
}
.submit-btn {
    width: 100%;
    height: 80rpx;
    background: #FF7F24;
    color: #fff;
    border-radius: 40rpx;
    font-size: 32rpx;
}