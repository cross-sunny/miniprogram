<view class="container" style="padding: 200rpx 40rpx 0;">
    <view class="logo" style="text-align: center; margin-bottom: 80rpx;">
        <text style="font-size: 60rpx; font-weight: bold; color: #FF6B35;">用户注册</text>
    </view>

    <!-- 用户名输入框：修复连续输入问题（移除 focus 属性） -->
    <view class="input-box" style="background: white; border-radius: 80rpx; padding: 0 30rpx; height: 80rpx; line-height: 80rpx; margin-bottom: 30rpx; display: flex; align-items: center;">
        <input placeholder="请输入用户名"
               placeholder-style="color: #999; font-size: 30rpx;"
               bindinput="onUsernameInput"
               style="flex: 1; font-size: 30rpx; height: 100%;" />
    </view>

    <!-- 密码输入框：保持不变 -->
    <view class="input-box" style="background: white; border-radius: 80rpx; padding: 0 30rpx; height: 80rpx; line-height: 80rpx; margin-bottom: 30rpx; display: flex; align-items: center;">
        <input placeholder="请输入密码（至少6位）"
               placeholder-style="color: #999; font-size: 30rpx;"
               type="password"
               bindinput="onPasswordInput"
               style="flex: 1; font-size: 30rpx; height: 100%;" />
    </view>

    <!-- 注册按钮：保持不变 -->
    <button class="btn-primary"
            bindtap="onRegister"
            style="background: linear-gradient(90deg, #FF6B35, #FF9248); color: white; border-radius: 80rpx; font-size: 32rpx; height: 80rpx; line-height: 80rpx; margin-top: 40rpx;">
        注册
    </button>

    <view style="text-align: center; margin-top: 40rpx; font-size: 28rpx; color: #666;">
        已有账号？<text style="color: #FF6B35; cursor: pointer;" bindtap="toLogin">立即登录</text>
    </view>
</view>