page {
  background-color: #F5F5F5;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}
.container {
  padding: 20rpx;
}
.btn-primary {
  background: linear-gradient(90deg, #FF6B35, #FF9248);
  color: white;
  border-radius: 80rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
}
.input-box {
  background: white;
  border-radius: 80rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.input-box input {
  flex: 1;
  font-size: 30rpx;
  height: 100%;
}